
<h1>All restaurants</h1>

<p><%= link_to "New restaurant", new_restaurant_path  %></p>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
    <p>Summary:<%= restaurant.description  %></p>
    <p>Adress:<%= restaurant.address  %></p>
    <p>Category:<%= restaurant.category  %></p>
    <%= link_to "Edit", edit_restaurant_path(restaurant)  %>
    <%= link_to "Delete", restaurant_path(restaurant), method: :delete   %>

  </li>
  <% end %>
</ul>



<p><%= link_to "New restaurant", new_restaurant_path  %></p>
